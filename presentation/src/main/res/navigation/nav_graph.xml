<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.fridgerescuer.presentation.views.main.MainFragment"
        android:label="MainFragment" >

        <action
            android:id="@+id/action_mainFragment_to_myfridgeFragment"
            app:destination="@id/myfridgeFragment" />
        <action
            android:id="@+id/action_mainFragment_to_mypageFragment"
            app:destination="@id/mypageFragment" />
    </fragment>

    <fragment
        android:id="@+id/myfridgeFragment"
        android:name="com.fridgerescuer.presentation.views.myfridge.MyfridgeFragment"
        android:label="MyfridgeFragment" />

    <fragment
        android:id="@+id/mypageFragment"
        android:name="com.fridgerescuer.presentation.views.mypage.MypageFragment"
        android:label="MypageFragment" />

</navigation>